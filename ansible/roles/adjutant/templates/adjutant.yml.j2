      error_handlers:
        - EmailNotification
      # Dict
      # Settings for standard notification handlers.
      # standard_handler_config:
      # Dict
      # Settings for error notification handlers.
      # error_handler_config:
      # List
      # Error types which are safe to acknowledge automatically.
      safe_errors:
        - SMTPException
