  # An ascending list of all the quota size names, so that Adjutant knows their relative sizes/order.
  sizes_ascending:
    - small
    - medium
    - large
  # Dict
  # A per region definition of what services Adjutant should manage quotas for. '*' means all or default region.
  services:
    '*':
    - cinder
    - neutron
    - nova