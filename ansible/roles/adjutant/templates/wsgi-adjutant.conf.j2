{% set adjutant_log_dir = '/var/log/kolla/adjutant' %}
{% set binary_path = '/usr/bin' if adjutant_install_type == 'binary' else '/var/lib/kolla/venv/bin' %}
Listen {{ api_interface_address | put_address_in_context('url') }}:{{ adjutant_api_port }}

ServerSignature Off
ServerTokens Prod
TraceEnable off
TimeOut {{ kolla_httpd_timeout }}
KeepAliveTimeout {{ kolla_httpd_keep_alive }}

ErrorLog "{{ adjutant_log_dir }}/apache-error.log"
<IfModule log_config_module>
    CustomLog "{{ adjutant_log_dir }}/apache-access.log" common
</IfModule>

{% if adjutant_logging_debug | bool %}
LogLevel info
{% endif %}

<VirtualHost *:{{ adjutant_api_port }}>

  ErrorLog "{{ adjutant_log_dir }}/adjutant-api-error.log"
  LogFormat "%{X-Forwarded-For}i %l %u %t \"%r\" %>s %b %D \"%{Referer}i\" \"%{User-Agent}i\"" logformat
  CustomLog "{{ adjutant_log_dir }}/adjutant-api-access.log" logformat
  WSGIApplicationGroup %{GLOBAL}
  WSGIDaemonProcess adjutant group=adjutant processes={{ openstack_service_workers }} threads=1 user=adjutant
  WSGIProcessGroup adjutant
  WSGIScriptAlias / "{{ binary_path }}/adjutant-api"

  <Directory "{{ binary_path }}">
       <FilesMatch "^adjutant-api$">
            Require all granted
       </FilesMatch>
  </Directory>

</VirtualHost>
